<link rel="stylesheet" href="{{ 'gallery-section.css' | asset_url }}" media="print" onload="this.media='all'">

<section class="gallery">
  <div class="container">
    <div class="row">
      <h5 class="gallery-heading">{{ section.settings.heading }}</h5>
      <p class="gallery-subheading">{{ section.settings.subheading }}</p>
      <div class="col-8">
        <div class="first-container first-img">
          <div class="gallery-content">
            <div class="icon">
              <img src="{{ section.settings.icon | image_url }}" class="icon" width="100" height="100">
            </div>
            <p class="gallery-text">{{ section.settings['gallery-text'] }}</p>
            <a href="{{ section.settings.button_link }}" class="subscribe-button">{{ section.settings.button_text }}</a>
          </div>
        </div>
        <div class="second-container second-img"></div>
      </div>
      <div class="col-4">
        <div class="third-container third-img"></div>
        <div class="fourth-container fourth-img"></div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Gallery Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Title",
      "default": "Outdoor Fun Continues Each Month"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Outdoor Fun Continues Each Month"
    },
    {
      "type": "text",
      "id": "gallery-text",
      "label": "Text Section",
      "default": "Text!"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe!"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon"
    }
  ],
  "presets": [
    {
      "name": "Gallery Section",
      "category": "custom"
    }
  ]
}
{% endschema %}
