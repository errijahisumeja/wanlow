<link rel="stylesheet" href="{{ 'component-slideshow.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<section class="slideshow">
  <div class="container">
    <h5 class="slideshow-heading">{{ section.settings.heading }}</h5>
    <div class="swiper gallery-section container-fluid">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide gallery-item">
            <img
              src="{{ block.settings.image | image_url }}"
              alt="{{ block.settings.alt_text }}"
              class="gallery-image img-fluid"
              width="100"
              height="100"
            >
          </div>
        {% endfor %}
      </div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var swiper = new Swiper('.swiper', {
      slidesPerView: 1,
      spaceBetween: 20,
      loop: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        576: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 3,
          spaceBetween: 20,
        },
        1024: {
          slidesPerView: 4,
          spaceBetween: 20,
        },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Slideshow Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Slideshow heading",
      "default": "Join Our Community"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Gallery Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Gallery Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow section",
      "category": "custom"
    }
  ]
}
{% endschema %}
