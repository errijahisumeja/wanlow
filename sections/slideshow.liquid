<link rel="stylesheet" href="{{ 'component-slideshow.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<section class="custom-slideshow">
  <div class="container">
    <h5 class="custom-slideshow-heading">{{ section.settings.heading }}</h5>
    <div class="swiper-container custom-swiper col-sm" style="overflow: hidden;">
      <div class="custom-swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide custom-slide">
            <img
              src="{{ block.settings.image | image_url }}"
              alt="{{ block.settings.alt_text }}"
              class="gallery-image img-fluid"
              width="100"
              height="100"
            >
          </div>
        {% endfor %}
      </div>
      <div class="custom-swiper-pagination swiper-pagination"></div>
      <div class="custom-swiper-button-next swiper-button-next"></div>
      <div class="custom-swiper-button-prev swiper-button-prev"></div>
    </div>
    <a href="{{ section.settings.button_link }}" class="custom-follow-us-button">
      <i class="fa-brands fa-instagram"></i>
      {{- section.settings.button_text }}
    </a>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    setTimeout(function () {
      var swiper = new Swiper('.custom-swiper', {
        wrapperClass: 'custom-swiper-wrapper',
        slideClass: 'swiper-slide',
        slidesPerView: 1,
        spaceBetween: 30,
        pagination: {
          el: '.custom-swiper-pagination',
          clickable: true,
        },
        navigation: {
          nextEl: '.custom-swiper-button-next',
          prevEl: '.custom-swiper-button-prev',
        },
        breakpoints: {
          446: {
            slidesPerView: 1,
            initialSlide: 0,
          },
          768: {
            slidesPerView: 2,
          },
          1024: {
            slidesPerView: 4,
          },
        },
      });
    }, 300);
  });
</script>

{% schema %}
{
  "name": "Slideshow Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Slideshow heading",
      "default": "Join Our Community"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Url",
      "default": "/"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Follow Us"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Gallery Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Gallery Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow section",
      "category": "custom"
    }
  ]
}
{% endschema %}
