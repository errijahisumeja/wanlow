<link rel="stylesheet" href="{{ 'testimonial.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<div class="testimonial">
  <h5 class="testimonial-heading">{{ section.settings.heading }}</h5>
  <div class="container">
    <div class="row">
      <div class="testimonial-swiper-unique swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div
                class="card p-5 text-center swiper-slide__item"
                style="padding: 10rem !important;"
              >
                <div class="swiper-slide__rating text-warning mb-3" style="color: #DB7623 !important;">★★★★★</div>
                <div class="swiper-slide__text">
                  <p class="testimonial-text">{{ block.settings.slide_content }}</p>
                  <h5 class="testimonial-author">{{ block.settings.author }}</h5>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="testimonial-swiper-pagination"></div>
        <div class="testimonial-swiper-button-next"></div>
        <div class="testimonial-swiper-button-prev"></div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    setTimeout(function () {
      var testimonialSwiper = new Swiper('.testimonial-swiper-unique', {
        slidesPerView: 1,
        spaceBetween: 30,
        initialSlide: 1,
        pagination: {
          el: '.testimonial-swiper-pagination',
          clickable: true,
        },
        navigation: {
          nextEl: '.testimonial-swiper-button-next',
          prevEl: '.testimonial-swiper-button-prev',
        },
        breakpoints: {
          446: {
            slidesPerView: 1,
            initialSlide: 0,
          },
          768: {
            slidesPerView: 2,
          },
          1024: {
            slidesPerView: 3,
          },
        },
      });
    }, 300);
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var swiper = new Swiper('.swiper', {
      slidesPerView: 1,
      spaceBetween: 20,
      loop: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        576: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 3,
          spaceBetween: 20,
        },
        1024: {
          slidesPerView: 4,
          spaceBetween: 20,
        },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Slideshow Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Slideshow heading",
      "default": "Join Our Community"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Gallery Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Gallery Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow section",
      "category": "custom"
    }
  ]
}
{% endschema %}
