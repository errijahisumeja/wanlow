<link rel="stylesheet" href="{{ 'component-slideshow.css' | asset_url }}" media="print" onload="this.media='all'">

<section class="slideshow">
  <div class="contaier">
    <h5 class="slideshow-heading">{{ section.settings.heading }}</h5>
    <div class="row">
      <div class="gallery-section container fluid">
        <div class="row gallery-container flex-nowrap">
          {% for block in section.blocks %}
            <div class="col-auto gallery-item">
              <img
                src="{{ block.settings.image | image_url }}"
                alt="{{ block.settings.alt_text }}"
                class="gallery-image img-fluid"
                width="100"
                height="100"
              >
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
    <a href="{{ section.settings.button_link }}" class="follow-us-button">
      {{- section.settings.button_text }}
      <i class="fa-brands fa-instagram"></i>
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Slideshow Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Slideshow heading",
      "default": "Join Our Community"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Url",
      "default": "/"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Follow Us"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Gallery Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Gallery Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow section",
      "category": "custom"
    }
  ]
}
{% endschema %}
